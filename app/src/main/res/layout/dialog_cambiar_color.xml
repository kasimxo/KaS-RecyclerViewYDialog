<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/gris"
>
    <LinearLayout
        android:id="@+id/LLbarra"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/LLcolor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/elige_una_barra"
            android:textColor="@color/white"
            android:textSize="25sp"/>
        <RadioGroup
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:id="@+id/verticales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:checked="true"
                android:text="Verticales"

                android:textColor="@color/black"
                android:button="@drawable/botonesdecolores"

                />
            <RadioButton
                android:id="@+id/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cian"
                android:checked="false"
                android:text="@string/h_1"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/azul"
                android:checked="false"
                android:text="@string/h_2"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/violeta"
                android:checked="false"
                android:text="@string/h_3"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/fondo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/violeta"
                android:checked="false"
                android:text="@string/fondo"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/LLbarra"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/elige_un_color"
            android:textColor="@color/white"
            android:textSize="25sp"/>
        <RadioGroup
            android:id="@+id/rgColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbBlanco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blanco"
                android:checked="false"
                android:text="@string/blanco"
                android:textColor="@color/white" />
            <RadioButton
                android:id="@+id/rbRojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/rojo"
                android:checked="false"
                android:text="@string/rojo"
                android:textColor="@color/rojo" />
            <RadioButton
                android:id="@+id/rbNaranja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/naranja"
                android:checked="false"
                android:text="@string/naranja"
                android:textColor="@color/naranja" />
            <RadioButton
                android:id="@+id/rbAmarillo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/amarillo"
                android:checked="false"
                android:text="@string/amarillo"
                android:textColor="@color/amarillo" />
            <RadioButton
                android:id="@+id/rbVerde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/verde"
                android:checked="false"
                android:text="@string/verde"
                android:textColor="@color/verde" />
            <RadioButton
                android:id="@+id/rbCian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cian"
                android:checked="false"
                android:text="@string/cian"
                android:textColor="@color/cian" />
            <RadioButton
                android:id="@+id/rbAzul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/azul"
                android:checked="false"
                android:text="@string/azul"
                android:textColor="@color/azul" />
            <RadioButton
                android:id="@+id/rbVioleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/violeta"
                android:checked="false"
                android:text="@string/violeta"
                android:textColor="@color/violeta" />
            <RadioButton
                android:id="@+id/rbNegro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/negro"
                android:checked="true"
                android:text="@string/negro"
                android:textColor="@color/negro" />

        </RadioGroup>

    </LinearLayout>
    <Button
        android:id="@+id/btnAplicar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/aplicar"
        android:textColor="@color/white"
        android:backgroundTint="@color/negro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLcolor"
        />
</androidx.constraintlayout.widget.ConstraintLayout>